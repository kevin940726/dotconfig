{
    "extends": "airbnb",
    "env": {
        "browser": true,
        "mocha": true,
        "node": true,
        "jquery": true,
        "serviceworker": true,
        "es6": true
    },
    "plugins": [
        "import",
        "react"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "indent": [1, 2],
        "no-console": 0,
        "quotes": 0,
        "brace-style": [1, "stroustrup"],
        "comma-dangle": [1, "always-multiline"],
        "max-len": [1, 100],
        "semi": [1, "always", { "omitLastInOneLineBlock": true }],
        "no-cond-assign": [1, "except-parens"],
        "func-names": 0,
        "no-param-reassign": [1, { "props": false }]
    }
}
